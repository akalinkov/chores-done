<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_tasks_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_new_user"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="2dp" />

        <View
            android:id="@+id/divider"
            style="@style/Divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Today" />

        <View
            android:id="@+id/divider2"
            style="@style/Divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/label_no_tasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:text="@string/label_no_tasks" />

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_tasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_rewards"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light"
        android:elevation="4dp"
        android:text="@string/title_rewards" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/screen_title_daily_chores"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_add_task"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_add_btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.CoordinatorLayout>